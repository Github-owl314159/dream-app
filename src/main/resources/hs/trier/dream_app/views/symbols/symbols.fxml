<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hs.trier.dream_app.controller.Symbols">
   <children>
      <Label styleClass="header" text="Dream Symbols" underline="true">
         <font>
            <Font name="Segoe Print" size="16.0" />
         </font>
      </Label>
      <HBox spacing="50.0" styleClass="bg-dark">
         <TableView fx:id="symbolsTableView" minWidth="150.0" HBox.hgrow="SOMETIMES">
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         <VBox spacing="50.0" HBox.hgrow="SOMETIMES">
            <TextField fx:id="symbolTextField" />
            <TextArea fx:id="symbolTextArea" wrapText="true" />
            <HBox alignment="TOP_CENTER" spacing="10.0">
               <Button mnemonicParsing="false" onAction="#addSymbol" text="Add Symbol" />
               <Button fx:id="editSymbolButton" mnemonicParsing="false" text="Edit Symbol" />
               <Button fx:id="deleteSymbolButton" mnemonicParsing="false" text="Delete Symbol" />
            </HBox>
         </VBox>
         <padding>
            <Insets left="70.0" right="70.0" />
         </padding>
      </HBox>
   </children>
</VBox>
