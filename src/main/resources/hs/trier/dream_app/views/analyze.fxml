<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hs.trier.dream_app.controller.AnalyzeDream">
    <children>
        <Label styleClass="header" text="Dream Analyze" underline="true">
            <font>
                <Font name="Segoe Print" size="16.0" />
            </font>
        </Label>
        <HBox spacing="20.0">
            <children>
                <VBox spacing="20.0" HBox.hgrow="SOMETIMES">
                    <children>
                        <HBox spacing="15.0" styleClass="bg-dark">
                            <Label text="Dream Title:">
                                <font>
                                    <Font name="Segoe Print" size="12.0" />
                                </font>
                            </Label>
                     <Label fx:id="titleLabel" text="Label" />
                        </HBox>
                  <WebView fx:id="dreamContent" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="400.0" />
                    </children>
                </VBox>
                <VBox spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" fillHeight="false" spacing="15.0" styleClass="bg-dark">
                            <children>
                                <Label text="Dream Symbols Found">
                                    <font>
                                        <Font name="Segoe Print" size="12.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                  <TableView fx:id="matchesTableView" prefHeight="200.0" prefWidth="200.0" />
                  <TextArea fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="200.0" wrapText="true" />
                        <HBox alignment="TOP_CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="getDeepDream" mnemonicParsing="false" text="Get DeepDream Image">
                                    <font>
                                        <Font name="Segoe UI Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
