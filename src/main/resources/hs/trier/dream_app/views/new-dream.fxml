<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hs.trier.dream_app.controller.NewDream">
   <children>
      <Label styleClass="header" text="Dream Editor" underline="true">
         <font>
            <Font name="Segoe Print" size="16.0" />
         </font>
      </Label>
      <HBox spacing="50.0">
         <children>
            <VBox spacing="50.0" HBox.hgrow="SOMETIMES">
               <children>
                  <HBox spacing="15.0" styleClass="bg-dark">
                     <Label text="Dream Title:">
                        <font>
                           <Font name="Segoe Print" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="titleTextField" promptText="Day Dreaming ..." />
                  </HBox>
                  <TextArea fx:id="contentTextArea" prefHeight="334.0" prefWidth="478.0" promptText="Today I dreamed about ..." wrapText="true" VBox.vgrow="ALWAYS">
                     <font>
                        <Font name="Segoe Print" size="14.0" />
                     </font>
                  </TextArea>
               </children>
            </VBox>
            <VBox spacing="50.0">
               <children>
                  <HBox alignment="CENTER" fillHeight="false" spacing="15.0" styleClass="bg-dark">
                     <children>
                        <Label text="Current Mood:">
                           <font>
                              <Font name="Segoe Print" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="moodTextField" promptText="How do you feel right now?" />
                     </children>
                  </HBox>
                  <TextArea fx:id="notesTextArea" prefHeight="192.0" prefWidth="155.0" promptText="You can put some notes here ..." wrapText="true" />
                  <HBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="saveDreamButton" mnemonicParsing="false" text="Save">
                           <font>
                              <Font name="Segoe UI Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="70.0" right="70.0" />
         </padding>
      </HBox>
   </children>
</VBox>
