<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="50.0" styleClass="bg-dark" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hs.trier.dream_app.controller.Library">
   <TableView fx:id="dreamsTableView" minWidth="146.0" prefHeight="400.0" prefWidth="146.0" HBox.hgrow="SOMETIMES" />
   <VBox prefHeight="400.0" prefWidth="256.0" spacing="20.0" HBox.hgrow="SOMETIMES">
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="257.0" spacing="10.0">
         <children>
            <Label minWidth="-Infinity" text="Title:" />
            <TextField fx:id="titleTextField" editable="false" />
         </children>
      </HBox>
      <TextArea fx:id="contentTextArea" editable="false" wrapText="true" />
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="editDreamButton" minWidth="-Infinity" mnemonicParsing="false" text="Edit Dream" />
            <Button fx:id="deleteDreamButton" minWidth="-Infinity" mnemonicParsing="false" text="Delete Dream" />
         </children>
      </HBox>
   </VBox>
   <VBox layoutX="298.0" layoutY="30.0" prefHeight="400.0" prefWidth="210.0" spacing="20.0">
      <children>
         <HBox alignment="BOTTOM_LEFT" layoutX="10.0" layoutY="10.0" spacing="10.0">
            <children>
               <Label minWidth="-Infinity" text="Date:" HBox.hgrow="SOMETIMES" />
               <TextField fx:id="dateTextField" editable="false" />
            </children>
         </HBox>
         <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="257.0" spacing="10.0">
            <children>
               <Label minWidth="-Infinity" text="Mood:" HBox.hgrow="SOMETIMES" />
               <TextField fx:id="moodTextField" editable="false" />
            </children>
         </HBox>
         <TextArea fx:id="notesTextArea" editable="false" wrapText="true" />
      </children>
   </VBox>
   <padding>
      <Insets bottom="70.0" left="70.0" right="70.0" top="70.0" />
   </padding>
</HBox>
